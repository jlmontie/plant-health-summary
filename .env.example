# Plant Health Demo - Environment Configuration
# Copy this to .env and fill in values

# =============================================================================
# Authentication (choose one)
# =============================================================================

# Option 1: Google AI Studio API Key (for local development)
GEMINI_API_KEY=your-api-key-here

# Option 2: Vertex AI (for production)
# USE_VERTEX_AI=true
# GOOGLE_CLOUD_PROJECT=plant-health-summary
# GCP_LOCATION=us-central1

# =============================================================================
# Model Settings
# =============================================================================

# MODEL_NAME=gemini-2.5-flash

# =============================================================================
# Evaluation Settings
# =============================================================================

EVAL_SAMPLE_RATE=1.0  # Fraction of requests to sample for async evaluation (0.0 to 1.0)

# Option 1: local development (set to false for production)
USE_LOCAL_EVAL=true

# Option 2: Pub/Sub (for production)
# PUBSUB_TOPIC=