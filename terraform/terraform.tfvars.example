# Copy this file to terraform.tfvars and fill in your values

project_id      = "your-gcp-project-id"
region          = "us-central1"
environment     = "dev"

# Use Vertex AI for authentication (recommended for production)
use_vertex_ai = true

# Only needed if use_vertex_ai = false
# gemini_api_key = "your-api-key"

# Scaling
# min_instances = 1 keeps one instance warm to preserve Chainlit sessions
min_instances = 1
max_instances = 2

# Evaluation settings
eval_sample_rate = 0.05
violation_rate = 0.2

# GitHub for Cloud Build (2nd gen connection)
# First create a connection in Console: Cloud Build > Repositories > Connect Repository
github_connection = "github-connection"  # Name you gave the connection
github_repo       = "your-repo-name"     # Repo name as it appears in the connection

# Arize Phoenix tracing
arize_api_key = "your-api-key"
arize_space_id = "your-space-id"

# Google Sheet connected to BigQuery
connected_sheet_url = "your-google-sheet-url"